<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tpaidiseno.PantallaAlternativa1" style="-fx-background-color: #72000000;" hgap="10" vgap="10">
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>

    <Label fx:id="mainGrid" text="Bodega para Actualizar" style="-fx-font-size: 60px; -fx-font-weight: bold; -fx-text-fill: white;" GridPane.columnSpan="2" GridPane.rowIndex="0"/>

    <TableView fx:id="grillaBodegasActualizar" GridPane.rowIndex="1" GridPane.columnSpan="2" style="-fx-font-size: 24px; -fx-background-color: transparent;">
        <TableColumn text="Bodegas" />
        <!-- Add columns dynamically based on the content of the list -->
    </TableView>

    <Button fx:id="seleccionBodegaBoton" text="Seleccionar" style="-fx-font-size: 30px;" onAction="#seleccionBodegaBoton_Click" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <TextField fx:id="bodegaSeleccionadaTextbox" editable="false" style="-fx-font-size: 40px;" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Bodega Seleccionada" style="-fx-font-size: 50px; -fx-font-weight: bold; -fx-text-fill: white;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

    <Label fx:id="titleLabel" text="Camino Alternativo 1" style="-fx-font-size: 70px; -fx-font-weight: bold; -fx-text-fill: white;" GridPane.columnSpan="2" GridPane.rowIndex="4"/>
</GridPane>
